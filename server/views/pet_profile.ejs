<!DOCTYPE html>
<html lang="en">

<head>
  <title></title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,500,300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,300,700' rel='stylesheet' type='text/css'>
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
  <link href="/styles/build/main.css" rel="stylesheet">
  <link href="/styles/css/style.css" rel="stylesheet">
  <script
    src="https://code.jquery.com/jquery-3.2.1.min.js"
    integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
    crossorigin="anonymous"></script>
  <script src="/styles/js/pet-profile.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js">

</head>

<body>
  <% include partials/_navbar.ejs %>
  <script>var id = <%- JSON.stringify(pup.id) %></script>
  <div class="registerdiv">
    <div class="container-fluid">
      <div class="row">
        <div class = "col-md-3 text-center">
          <div class="left_sidebar">
          <%const owner = person[0]%>
          <% include partials/_owner.ejs%>
          <hr>
          <style>
            .owner-avatar {width: 100px!important;}
          </style>

          </div>
        </div>
        <div class="col-md-6 text-center">
          <% include partials/_puppy.ejs %>
          <style>
            .pup-pic {width: 300px!important;}
          </style>
          <div class='statuses'> </div>

          <% if (user && user.id == person[0].id) { %>
          <section class="new-status">
            <h2>Update pup's status</h2>
            <form class="status-form" method="POST" action= "/pet/<%= pup.id %>">
              <textarea name="text" placeholder="Ehhh What's up Doc?"></textarea>
              <input type="submit" value="Update">
              <span class="counter">140</span>
            </form>
          </section>
          <% } %>
        </div>
        <div class="col-md-3 text-right">
          <div class="profile_sidebar">
          <%events.forEach((event) => {%>
            <% include partials/_event.ejs %>
          <%});%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include partials/_footer.ejs %>
</body>

</html>