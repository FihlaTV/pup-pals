<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width,initial-scale=1.0">
  <title>Pup-Pals</title>
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,500,300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,300,700' rel='stylesheet' type='text/css'>
  <!-- Bootstrap core CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/styles/build/main.css">
</head>

<body>
  <% include partials/_navbar.ejs%>
    <div class="container">
      <div class="row">
        <div class="registerdiv">
          <div class="col-xs-12 col-sm-12 col-md-4 well well-sm">
            <div class="create-event form-group">
              <h2>Log in</h2>
              <%if(error){%>
                <h4>
                  <%= error%>
                </h4>
                <%}%>
                  <form method="POST" action="/user/login" class="register-form">
                    <p>
                      <label for="email-input">Email:</label>
                      <input class="input email-input" type="email" name="email">
                    </p>
                    <p>
                      <label for="password-input">Password:</label>
                      <input class="input password-input" type="password" name="password">
                    </p>
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Submit</button>
                  </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>

</html>