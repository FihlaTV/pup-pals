<div class="smalldetails">
  <div class="smalldetails-header">
    <h3 class="smalldetails-title"><%= ev.title %></h3>
    <span class="smalldetails-attendees"><%= ev.count %> Going</span>
  </div>
  <div class="smalldetails-body">
    <span class="smalldetails-date"><i class="fa fa-clock-o" aria-hidden="true"></i> <%= moment(ev.date_time).format("dddd MMMM Do YYYY") %></span>
    <span class="smalldetails-location"><i class="fa fa-map-marker" aria-hidden="true"></i> <%= ev.location %></span>
    <span class="smalldetails-location"><%= ev.description %></span>
  </div>
  <div class="smalldetails-footer">
    <span class="smalldetails-rsvp">
      <button type="button" class="btn btn-primary">RSVP</button>
    </span>
    <span class="smalldetails-calender">
      <button type="button" class="btn btn-primary">Calender</button>
    </span>
  </div>
</div>