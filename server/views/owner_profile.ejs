<!DOCTYPE html>
<html lang="en">

<head>
  <title>Pup-Pals</title>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <!-- Bootstrap core CSS -->
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
  <link href='https://fonts.googleapis.com/css?family=Roboto:400,500,300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Roboto+Slab:400,300,700' rel='stylesheet' type='text/css'>
 <link href="/styles/css/style.css" rel="stylesheet">
  <link href="/styles/build/main.css" rel="stylesheet">


</head>

<body>
  <% include partials/_navbar.ejs %>
  <div class="registerdiv">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-3 text-center">
          <div class="left_sidebar">
            <% pups.forEach(function(item){ %>
              <% const pup = item; %>
                <a href="/pet/<%=pup.id%>"> 
                  <img class="pup-pic"src="<%= pup.avatar_url %>" style="width:100px">
                  <h2><%= pup.name %></h2>
                </a>
                <hr>
            <% }) %>
            <% if(user && user.id == profileId) { %>
              <a href="/pet/new">Add New Pups</a>
            <%}%>
          </div>
        </div>
        <div class="col-md-6 text-center">
          <% const owner = person %>
          <% include partials/_owner.ejs %>
          <style>
            .owner-avatar {width: 300px!important;}
          </style>  
        </div>
        <div class="col-md-3 text-center">
          <div class="profile_sidebar">
            <h3>Attending events </h3>
              <% events.forEach (function(event){ %>
                <% include partials/_event.ejs %>
              <% }) %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include partials/_footer.ejs %>
</body>

</html>